  <modelVersion>4.0.0</modelVersion>

  <groupId>ret</groupId>
  <artifactId>scrape-flow</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>webscrapers Maven Webapp</name>

  <properties>

    <!--component specific-->
    <appcore-version>1.7.09-SNAPSHOT</appcore-version>
    <selenium-version>3.141.59</selenium-version>
    <htmlunit-version>2.34.1</htmlunit-version>
    <akka-version>2.5.13</akka-version>

    <!-- possibly same as in other components-->
    <java-xml-bind-version>2.3.1</java-xml-bind-version>
    <spring.version>5.0.1.RELEASE</spring.version>
    <mysql-connector-version>8.0.15</mysql-connector-version>
    <commons-dbcp2-version>2.1.1</commons-dbcp2-version>
    <hibernate.version>5.2.12.Final</hibernate.version>
    <hibernate-javax-persistence-version>1.0.0.Final</hibernate-javax-persistence-version>
    <querydsl.version>4.2.1</querydsl.version>
    <fasterxml.version>2.9.8</fasterxml.version>
    <spring-data.version>2.0.1.RELEASE</spring-data.version>
    <mockito-version>2.18.3</mockito-version>
    <junit-version>4.12</junit-version>
    <log4j-version>2.5</log4j-version>
    <slf4j-version>1.7.19</slf4j-version>
    <okhhtp3-version>3.14.0</okhhtp3-version>
    <javax-annotation-version>1.0</javax-annotation-version>
    <typesafe-config-version>1.3.1</typesafe-config-version>
    <commons-codec-version>1.10</commons-codec-version>
    <commons-math-version>3.3</commons-math-version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.9</maven.compiler.source>
    <maven.compiler.target>1.9</maven.compiler.target>
  </properties>

  <repositories>
    <repository>
      <id>maven-central</id>
      <name>maven-central-repo</name>
      <url>https://repo1.maven.org/maven2/</url>
